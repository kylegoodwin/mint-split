{
    "manifest_version": 2,
    "name": "Mint Split",
    "description": "Pick transacitons you would like to split with someone else and generate a summary",
    "version": "0.2",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/eventPage.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage"
      ],
    "options_page": "options.html"
}